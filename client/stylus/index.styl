SCREEN_WIDTH = 800
SCREEN_HEIGHT = 480
NAVIGATION_BAR_HEIGHT = 40
INNER_PAGE_HEIGHT = SCREEN_HEIGHT - NAVIGATION_BAR_HEIGHT


#js-game-container .screen-component
  position: absolute
  background-color: black

  .page-component
    position: absolute
    width: 100%
    height: 100%

    .navigation_bar-component
      position: absolute
      width: 100%
      height: unit(NAVIGATION_BAR_HEIGHT, 'px')

    .inner_page
      position: absolute
      top: unit(NAVIGATION_BAR_HEIGHT, 'px')
      width: 100%
      height: unit(INNER_PAGE_HEIGHT, 'px')

  .welcome-page-component
    font-family: 'Miranda';
    cursor: pointer
    h2
      margin-top: 180px
      font-size: 72px
      text-align: center
    .touch-to-start
      margin-top: 20px
      font-size: 24px
      text-align: center
